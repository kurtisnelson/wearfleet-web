<!DOCTYPE html>
<html>
  <head>
    <title>WearfleetWeb</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if current_user %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to image_tag("google_oauth.png", width: 100), user_omniauth_authorize_path(provider: "gplus") %>
    <% end %>
    <%= yield %>

  </body>
</html>
